<% unless current_user == @user %>
  <% if current_user.followed.include?(@user) && @friend_request.status == "accepted"%>
    <%= form_for(current_user.active_relationships.find_by(followed_id: @user.id),
    html: {method: :delete}) do |f| %>
      <%= f.submit "Unfriend", class: "btn" %>
    <% end %>

  <% elsif current_user.followed.include?(@user) && @friend_request.status == "pending" %>
    <%= form_for(current_user.active_relationships.find_by(followed_id: @user.id),
    html: {method: :delete}) do |f| %>
      <%= f.submit "Cancel friend request", class: "btn" %>
    <% end %>

  <% else %>
    <%= form_for(current_user.active_relationships.build) do |f| %>
      <%= hidden_field_tag :followed_id, @user.id  %>
      <%= f.submit "Send friend request", class: "btn btn-primary" %>
    <% end %>
  <% end %>
<% end %>
