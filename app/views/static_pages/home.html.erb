<h1>Home</h1>

<h2>All documents</h2>

<div class="row">
  <% Document.all.each do |d| %>
    <div class="col-4">
      <p><%# image_tag d.file_name.preview(resize_to_limit: [100, 100]) %></p>
      <p><%= d.description %></p>
      <p><%= d.author %></p>
      <p><%= d.view_count %> views</p>
      <p><%= d.download_count %> downloads</p>
      <p><%= link_to "document show", d %></p>
      <p><%= link_to "Download this document", download_pdf_document_path(d), target: "blank" %></p>
    </div>
  <% end %>
</div>


